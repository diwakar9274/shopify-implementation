.container
  %table.table.table-bordered.table-margin-top
    %thead.table-head.table-dark
      %th Customer
      %th Product
      %th Price Id
      %th Price
      %th Currency
    - @transactions.each do |transaction|
      %tr
        %td= transaction.email
        %td= transaction.variant.product.title
        %td= transaction.price_id
        %td= transaction.price
        %td= transaction.currency
